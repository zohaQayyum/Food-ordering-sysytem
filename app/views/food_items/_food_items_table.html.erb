<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Category</th>
      <th>Discount</th>
      <th>Actions</th>
    </tr>
  </thead>

    <tfoot>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Discount</th>
        <th>Actions</th>
      </tr>
    </tfoot>

  <tbody>
    <% if @menus %>
      <% @menus.each do |menu| %>
        <%  menu.menu_items.where(menuable_type: "GroupItem").each do |menuItems| %>
          <% menuItems.menuable.food_items.each do |food| %>
            <tr>
              <td><%= food.name %></td>
              <td><%= food.price %></td>
              <td><%= food.group_item_name %></td>
              <td><%= food.discount_percent %>%</td>
              <td>
                <%= link_to "Edit", edit_food_item_path(food),
                            class: "btn btn-sm btn-secondary" %>
                  <%= link_to "Remove", food_item_path(food), method: :delete,
                              data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-warning" %>
              </td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
