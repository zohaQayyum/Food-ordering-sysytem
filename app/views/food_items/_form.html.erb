<!-- Page Wrapper -->
<div id="wrapper">
  <%= render 'layouts/sidebar' %>
  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div>
      <%= render 'layouts/navbar' %>
      <div class="card-body">
        <div class="row gutters">
          <div class="col-md-3" ></div>
          <div class="col-xl-12 col-lg-12 col-md-8 col-sm-6 col-12">
            <%= form_with(model: @food, local: true, remote: false) do |f| %>
              <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12">
                <div class="form-group">
                  <label for="Name" class="form-edit-label">Name</label>
                    <%= f.text_field :name, class: "form-control" %>
                </div>
              </div>

              <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12">
                <div class="form-group">
                  <label for="Price" class="form-edit-label">Price</label>
                    <%= f.text_field :price, class: "form-control" %>
                </div>
              </div>

              <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12">
                <div class="form-group">
                  <label for="Quantity" class="form-edit-label">Quantity</label>
                    <%= f.number_field :quantity, class: "form-control" %>
                </div>
              </div>

              <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12">
                <div class="form-group">
                  <label for="Group" class="form-edit-label ">Group Name</label>
                  <div class= "form-select">
                  <%= f.select :group_item_id, GroupItem.all.to_a.map  { |t| ["#{t.name}", t.id] }, {include_blank: "Select Group Name"}, class: "form-control" %>
                  </div>
                </div>
              </div>

              <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12">
                <div class="form-group">
                  <label for="Discount" class="form-edit-label">Discount</label>
                  <div class= "form-select">
                    <%= f.select :discount_id, Discount.all.to_a.map  { |t| ["#{t.discount_percent}% #{t.discount_type}", t.id] }, {include_blank: "Select Discount"}, class: "form-control" %>
                  </div>
                </div>
              </div>

              <div class="text-right">
                <%= link_to "cancel", :back, class: "back-btn" %>
                <%= f.submit %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/logout_model' %>
