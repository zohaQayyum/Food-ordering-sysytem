<!-- Page Wrapper -->
<div id="wrapper">
  <%= render 'layouts/sidebar' %>
  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div>
      <%= render 'layouts/navbar' %>
      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Vouchers</h1>
        <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
          For more information about DataTables, please visit the <a target="_blank"
              href="https://datatables.net">official DataTables documentation</a>.</p>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary link-color-add">Vouchers
              <%= button_to  new_voucher_path,:method => :get, class: "nav-link-style" do %>
                <i class="fa fa-plus"></i> Add new Voucher <% end %></h6>
          </div>

          <div class="card-body">
            <div class="table-responsive">
             <div class="form-row">
                <div class ="form-group col-md-6">
                  <%= form_with url: "/vouchers", method: :get do |form| %>
                    <%= form.label "Show entries: " %>
                    <%= select_tag "per_page", options_for_select([5,10,20,50], :selected=>params[:per_page]),  { onchange: "this.form.submit();"} %>
                  <% end %>
                </div>
                <div class ="col-md-6">
                    <%= render 'search_form' %>
                </div>
              </div>

              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th><%= sort_link @q, :id, "Voucher Id", class: "sort-link"%></th>
                    <th><%= sort_link @q, :voucher_status, "Status", class: "sort-link"%></th>
                    <th>Promo Code</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th><%= sort_link @q, :discount_discount_percent, "Discount Percent", class: "sort-link"%></th>
                    <th><%= sort_link @q, :discount_discount_type, "Discount", class: "sort-link"%></th>
                    <th>Actions</th>
                  </tr>
                </thead>

                  <tfoot>
                    <tr>
                      <th>Voucher Id</th>
                      <th>Status</th>
                      <th>Promo Code</th>
                      <th>Start Date</th>
                      <th>End Date</th>
                      <th>Discount Percent</th>
                      <th>Discount</th>
                      <th>Actions</th>
                    </tr>
                  </tfoot>

                  <tbody>
                    <% if @voucher %>
                      <% @voucher.each do |voucher| %>
                        <% current_employee.restaurant.discounts.each do |discount|%>
                          <% if discount.id == voucher.discount.id %>
                            <% voucher.voucher_timelines.each do |voucher_timeline|%>
                              <tr>
                                <td><%= voucher.id %></td>
                                <td><%= voucher.voucher_status %></td>
                                <td><%= voucher.promo_code %></td>
                                <td><%= voucher_timeline.valid_from %></td>
                                <td><%= voucher_timeline.valid_to %></td>
                                <td><%= voucher.discount_percent %>%</td>
                                <td><%= voucher.discount_type %></td>
                                <td>
                                  <%= link_to "Edit", edit_voucher_path(voucher),
                                              class: "btn btn-sm btn-secondary" %>
                                </td>
                              </tr>
                            <% end %>
                          <% end %>
                        <% end %>
                      <% end %>
                    <% end %>
                  </tbody>
                </table>
                <div class="right-btn">
                  <%= pagy_bootstrap_nav(@pagy).html_safe %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->
    </div>
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->
<%= render 'layouts/logout_model' %>
