<!-- Page Wrapper -->
<div id="wrapper">
  <%= render 'layouts/sidebar' %>
  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div>
      <%= render 'layouts/navbar' %>
      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Menus</h1>
        <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
          For more information about DataTables, please visit the <a target="_blank"
              href="https://datatables.net">official DataTables documentation</a>.</p>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary link-color-add">Menus
              <%= button_to new_menu_path,:method => :get, class: "nav-link-style" do %>
                <i class="fa fa-plus"></i> Add new Menu <% end %></h6>
          </div>

          <div class="card-body">
            <div class="table-responsive">
              <div class="form-row">
                <div class ="form-group col-md-6">
                  <%= form_with url: "/menus", method: :get do |form| %>
                    <%= form.label "Show entries: " %>
                    <%= select_tag "per_page", options_for_select([5,10,20,50], :selected=>params[:per_page]),  { onchange: "this.form.submit();"} %>
                  <% end %>
                </div>
                <div class ="col-md-6">
                  <%= render 'search_form' %>
                </div>
              </div>

              <%= render 'menu_table' %>
              </div>
            </div>
          </div>
        </div>
      <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->
    </div>
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->
<%= render 'layouts/logout_model' %>
