<!-- Page Wrapper -->
<div id="wrapper">
  <%= render 'layouts/sidebar' %>
  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div>
      <%= render 'layouts/navbar' %>
      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Discounts</h1>
        <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
          For more information about DataTables, please visit the <a target="_blank"
              href="https://datatables.net">official DataTables documentation</a>.</p>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary link-color-add">Discounts
              <%= button_to new_discount_path,:method => :get, class: "nav-link-style" do %>
                <i class="fa fa-plus"></i> Add new Discount<% end %></h6>
          </div>

          <div class="card-body">
            <div class="table-responsive">
            <div class="form-row">
                <div class ="form-group col-md-6">
                  <%= form_with url: "/discounts", method: :get do |form| %>
                    <%= form.label "Show entries: " %>
                    <%= select_tag "per_page", options_for_select([5,10,20,50], :selected=>params[:per_page]),  { onchange: "this.form.submit();"} %>
                  <% end %>
                </div>
                <div class ="col-md-6">
                    <%= render 'search_form' %>
                </div>
              </div>

              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th><%= sort_link @q, :id, "Discount Id", class: "sort-link"%></th>
                    <th><%= sort_link @q, :discount_percent, "Discount percent", class: "sort-link"%></th>
                    <th><%= sort_link @q, :discount_type, "Discount", class: "sort-link"%></th>
                    <th><%= sort_link @q, :created_at, "Date", class: "sort-link"%></th>
                    <th>Actions</th>
                  </tr>
                </thead>

                  <tfoot>
                    <tr>
                      <th>Discount Id</th>
                      <th>Discount percent</th>
                      <th>Discount</th>
                      <th>Date</th>
                      <th>Actions</th>
                    </tr>
                  </tfoot>

                  <tbody>
                    <% @discount.each do |discounts| %>
                      <tr>
                        <td><%= discounts.id %></td>
                        <td><%= discounts.discount_percent %></td>
                        <td><%= discounts.discount_type %></td>
                        <td><%= discounts.created_at %></td>
                        <td>
                          <%= link_to "Edit", edit_discount_path(discounts),
                                      class: "btn btn-sm btn-secondary" %>
                            <%= link_to "Remove", discount_path(discounts), method: :delete,
                                      data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-warning" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->
    </div>
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->
<%= render 'layouts/logout_model' %>
