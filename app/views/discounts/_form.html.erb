<!-- Page Wrapper -->
<div id="wrapper">
  <%= render 'layouts/sidebar' %>
  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div>
      <%= render 'layouts/navbar' %>
      <div class="card-body">
        <div class="row gutters">
          <div class="col-md-3" ></div>
          <div class="col-xl-12 col-lg-12 col-md-8 col-sm-6 col-12">
            <%= form_with(model: @discount, local: true, remote: false) do |f| %>
              <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12">
                <div class="form-group">
                  <label for="discount_percent" class="form-edit-label" placeholder = "Discount Percent e.g 12%">Discount</label>
                  <%= f.number_field :discount_percent ,min: "0", class: "form-control" %>
                </div>
              </div>

              <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12">
                <div class="form-group">
                  <label for="discount_type" class="form-edit-label">Discount Type</label>
                  <%= f.select :discount_type, options_for_select(["Select", "Flat", "Percent"]), {:prompt => "Select One"}, {:class => 'form-control'} %>
                </div>
              </div>

              <div class="text-right">
                <%= link_to "cancel", :back, class: "back-btn" %>
                <%= f.submit %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/logout_model' %>
