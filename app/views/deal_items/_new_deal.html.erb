<%= form_with(model: @deal_item, local: true, remote: false) do |f| %>
  <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12">
    <div class="form-group">
      <label for="Name" class="form-edit-label">Name</label>
        <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12">
    <div class="form-group">
      <label for="price" class="form-edit-label">Price</label>
        <%= f.text_field :date_active_from, class: "form-control" %>
    </div>
  </div>

  <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12">
    <div class="form-group">
      <label for="date_active_from" class="form-edit-label">Start Date</label>
        <%= f.datetime_field :time_active_from, class: "form-control" %>
    </div>
  </div>

  <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12">
    <div class="form-group">
      <label for="date_active_to" class="form-edit-label">End Date</label>
        <%= f.datetime_field :time_active_to, class: "form-control" %>
    </div>
  </div>

  <%= f.fields_for :menu_items do |m| %>
    <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12">
      <div class="form-group">
        <label for="menu_id" class="form-edit-label">Menu</label>
          <%= m.select :menu_id, Menu.all.to_a.map  { |t| ["#{t.name}", t.id] }, {include_blank: "Select Menu"}, class: "form-control" %>
      </div>
    </div>
  <% end %>

  <div class="text-right">
    <%= link_to "cancel", :back, class: "back-btn" %>
    <%= f.submit %>
  </div>
<% end %>
