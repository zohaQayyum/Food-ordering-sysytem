<!-- Page Wrapper -->
<div id="wrapper">
  <%= render 'layouts/sidebar' %>
  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div>
      <%= render 'layouts/navbar' %>
      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Deals</h1>
        <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
          For more information about DataTables, please visit the <a target="_blank"
              href="https://datatables.net">official DataTables documentation</a>.</p>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary link-color-add">Deal Items
              <%= button_to new_deal_item_path(deal_id: @deal.id),:method => :get, class: "nav-link-style" do %>
                <i class="fa fa-plus"></i> Add Deal Item<% end %>
            </h6>
          </div>

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Food Id</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Actions</th>
                  </tr>
                </thead>

                  <tfoot>
                    <tr>
                      <th>Food Id</th>
                      <th>Name</th>
                      <th>Price</th>
                      <th>Actions</th>
                    </tr>
                  </tfoot>

                  <tbody>
                    <%= render 'deal_items_table' %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->
    </div>
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->
<%= render 'layouts/logout_model' %>
