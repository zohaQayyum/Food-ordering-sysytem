<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Food Id</th>
      <th>Name</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tfoot>
    <tr>
      <th>Food Id</th>
      <th>Name</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </tfoot>

  <tbody>
    <% @deal.deal_items.each do |deal_items| %>
      <tr>
        <% if deal_items.dealable_type == "GroupItem" %>
          <% deal_items.dealable.food_items.each do |food_item| %>
            <td><%= food_item.id %></td>
            <td><%= food_item.name %></td>
            <td><%= food_item.price %></td>
            <td>
              <%= link_to "Remove", deal_path(:deal_items), method: :delete,
                        data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-warning" %>
            </td>
          <% end %>
        <% elsif deal_items.dealable_type == "FoodItem"%>
          <td><%= deal_items.dealable_id%></td>
          <td><%= deal_items.dealable_name%></td>
          <td><%= deal_items.dealable_price%></td>
          <td>
            <%= link_to "Remove", deal_path(:deal_items), method: :delete,
                      data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-warning" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
