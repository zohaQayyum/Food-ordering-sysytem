<!-- Page Wrapper -->
<div id="wrapper">

  <%= render 'layouts/sidebar' %>

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

      <%= render 'layouts/navbar' %>

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Deals</h1>
        <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
          For more information about DataTables, please visit the <a target="_blank"
              href="https://datatables.net">official DataTables documentation</a>.</p>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary link-color-add">Deals
              <%= button_to deals_new_path,:method => :get, class: "nav-link-style" do %>
                <i class="fa fa-plus"></i> Add new Deal <% end %></h6>
          </div>

          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Deal Id</th>
                    <th>Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                  <tfoot>
                    <tr>
                      <th>Deal Id</th>
                      <th>Name</th>
                      <th>Start Date</th>
                      <th>End Date</th>
                      <th>Actions</th>
                    </tr>
                  </tfoot>
                  <tbody>
                   <% @menu.each do |menu| %>
                      <% menu.menu_items.each do |menuItems| %>
                        <% if menuItems.menuable_type == "Deal" %>
                          <% menu.menu_items.select(:menuable).distinct.each do %>
                            <tr>
                              <td><%= menuItems.menuable_id %></td>
                              <td><%= menuItems.menuable.name %></td>
                              <td><%= menuItems.menuable.time_active_from %></td>
                              <td><%= menuItems.menuable.time_active_to %></td>
                              <% deal = menuItems.menuable_id%>
                              <td>
                               <%= link_to "View Details",  deal_items_path(id: deal),
                                            class: "btn btn-sm btn-secondary" %>
                                <%= link_to "Edit", edit_deal_path(id: deal),
                                            class: "btn btn-sm btn-secondary" %>
                                  <%= link_to "Remove", deal_path(menuItems.menuable_id), method: :delete,
                                            data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-warning" %>
                              </td>
                            </tr>
                          <% end %>
                        <% end %>
                      <% end %>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy; Your Website 2020</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
<i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>

      <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
        <a class="btn btn-primary" href="login.html">Logout</a>
      </div>
    </div>
  </div>
</div>
